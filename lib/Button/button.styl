@import '../helpers/stylus.helper.styl';default-style(color)  color #fff  border none  background color  &[data-merry-ui-outline="true"]    color color    background #fff    border: 1.8px solid color.{class-prefix}-btn  white-space nowrap  border-radius 2px  box-shadow 0 2px 5px 0 rgba(0, 0, 0, .14), 0 2px 10px 0 rgba(0, 0, 0, .1)  display inline-block  text-align center  line-height 1.5  margin 8px 8px 8px 0  padding 0 15px  font-size 14px  min-width 80px  height 32px  overflow hidden  cursor pointer  transition all .2s  &:hover    box-shadow 0 2px 5px 0 rgba(0, 0, 0, .24), 0 2px 10px 0 rgba(0, 0, 0, .24)  &:focus    outline none  &:active    opacity 0.85  //disabled样式  &[disabled]    cursor not-allowed    box-shadow 0 2px 5px 0 rgba(0, 0, 0, .16), 0 2px 10px 0 rgba(0, 0, 0, .12)    opacity 0.6  &:active    opacity none//颜色样式.{class-prefix}-btn-primary  default-style(primary-color).{class-prefix}-btn-success  default-style(success-color).{class-prefix}-btn-danger  default-style(danger-color).{class-prefix}-btn-info  default-style(info-color).{class-prefix}-btn-warning  default-style(warning-color).{class-prefix}-btn-dark  default-style(dark-color)//大小样式.{class-prefix}-btn-small  height 24px  min-width 50px  padding 0 7px  font-size 12px.{class-prefix}-btn-big  height 40px  min-width 100px