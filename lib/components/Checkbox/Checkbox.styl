@import '../../helpers/stylus.helper.styl';

checkbox = class-prefix + "-checkbox"
input = class-prefix + "-checkbox-input"
input-wrap = input + "-wrap"

.{input-wrap}
  box-sizing: border-box;
  margin: 0;
  padding: 0
  list-style: none;
  position: relative;
  white-space: nowrap;
  vertical-align: middle;
  outline: none;
  background: red;
  cursor: pointer;
  color: rgba(0,0,0,0.65);
  font-size: 14px;

.{input}
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1;
  width: 100%;
  height: 100%;
  cursor: pointer;
  opacity: 0;
