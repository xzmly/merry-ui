@import '../../helpers/stylus.helper.styl';

label = class-prefix + "-inputNumber-label"
input = class-prefix + "-inputNumber"
text = input + "-label-text"
input-wrap = input + "-wrap"
action-wrap = input + "-action-wrap"

default-size-height = 32px
small-size-height = 24px
big-size-height = 40px


change-size-style(height,fontSize)
  height height
  font-size fontSize
  .{input}
    font-size fontSize


.{label}
  display flex
  align-items center
  min-width 100%
  transition all .2s
  line-height 1.5
  height default-size-height
  font-size min-font-size
  color font-default-color

  &.{input}-big
    height big-size-height

  &.{input}-small
    height small-size-height

  &:hover
    .{input}
      padding 0 22px 0 11px
      input-focus()
    .{action-wrap}
      display flex


.{label}-top
  flex-direction column
  align-items flex-start
  height default-size-height + 29

  &.{input}-big
    height big-size-height + 29

  &.{input}-small
    height small-size-height + 29

  .{label}-text
    padding-bottom 8px
    &:after
      display none
  .{input-wrap}
    width 100%
    flex 1


.{text}
  font-size min-font-size
  &:after
    content ':'
    padding 0 6px 0 3px
    top -0.6px
    position relative


.{input-wrap}
  position relative
  height 100%
  flex 1


.{input}
  touch-action manipulation
  position relative
  margin 0
  outline 0
  border 1px solid #d9d9d9
  background #fff
  box-sizing border-box
  transition all .2s
  border-radius 4px
  display inline-block
  height 100%
  padding 0 11px
  font-size min-font-size
  color font-default-color
  width 100%
  &:focus
    input-focus()
  &[type=number]::-webkit-inner-spin-button,[type=number]::-webkit-outer-spin-button
    -webkit-appearance: none;


.{action-wrap}
  position absolute
  width 22px
  height: 100%
  top 0
  right 0
  display none
  flex-direction column
  box-sizing border-box
  border-left: 1px solid #ddd
  overflow hidden
  border-radius 0 4px 4px 0
  z-index 1
  > span
    width 100%
    height: 50%
    overflow hidden
    display flex
    justify-content center
    align-items center
    box-sizing border-box
    cursor pointer
    transition all .2s
    user-select: none;
    &:active
      background rgba(0,0,0,0.02)
      color warning-color
    &:hover
      height 90%
      color warning-color
    &:last-child
      border-top 1px solid #ddd
    > .merry-icon
      font-size 12px

