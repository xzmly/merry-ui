@import '../../helpers/stylus.helper.styl';

menu = class-prefix + '-menu'
sub-menu = class-prefix + '-sub-menu'
menu-item = class-prefix + '-menu-item'
font-color = rgba(0,0,0,0.75)

common-hover(color)
  &:hover
    color color
    transition all .2s

content-ellipsis()
  overflow: hidden;
  text-overflow: ellipsis;
  white-space:nowrap;


.{sub-menu}-content,.{menu}
  list-style-type none
  padding-inline-start 0

.{menu}
  min-height 80px
  width 100%
  overflow hidden

.{sub-menu}
  color rgba(0,0,0,0.75)
  font-size 14px
  &.{class-prefix}-active
    > .{sub-menu}-title
      color primary-color
      > .{sub-menu}-arrow
        transform rotate(-180deg) translate(-50%,50%)
        color font-color
  .{sub-menu}-title
    height 40px
    line-height 40px
    cursor pointer
    padding-right 32px
    margin: 4px 0
    position relative
    content-ellipsis()
    common-hover(primary-color)
    .{sub-menu}-arrow
      font-size 12px
      transition all .2s
      position absolute
      right 16px
      top 50%
      transform translate(50%,-50%)
  .{sub-menu}-content
    padding: 0

.{menu-item}
  common-hover(primary-color)
  cursor pointer
  height 40px
  line-height 40px
  padding-right: 13px;
  margin: 4px 0
  box-sizing border-box
  content-ellipsis()
  &.{class-prefix}-disabled
    opacity 0.5
    cursor not-allowed
    common-hover(font-color)
  &.{class-prefix}-active
    transition all .2s
    background rgba(21, 171, 255, 0.24)
    color primary-color
    border-right 3px solid primary-color
